#include<string.h>
#include<conio.h>
#include<graphics.h>
#include<mmsystem.h>
#pragma comment(lib,"winmm.lib")
void music1()
{
    mciSendString("open src/bg.mp3 alias bgm1", NULL, 0, NULL);
    mciSendString("play bgm1 repeat", NULL, 0, NULL);
}
void music2()
{
    mciSendString("open src/bg.wav alias bgm2", NULL, 0, NULL);
    mciSendString("play bgm2", NULL, 0, NULL);
}
